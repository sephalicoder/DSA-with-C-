   Date: 15-09-25
   Description:  Length of Last Word */ 


#include <bits/stdc++.h>
using  namespace std;
class Solution {
public:
    int lengthOfLastWord(string s) {
        int n = s.size();
        int i = n - 1;

        // Skip trailing spaces
        while(i >= 0 && s[i] == ' ') {
            i--;
        }

        int length = 0;
        // Count characters of the last word
        while(i >= 0 && s[i] != ' ') {
            length++;
            i--;
        }

        return length;
    }
};
