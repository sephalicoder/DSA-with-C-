
/* Author: Sephali 
   Date: 2-11-25
   Description: Set the K-th bit of a given number
*/



#include <bits/stdc++.h>

using namespace std;


int setKthBit(int n, int k)
{
    
    return ((1 << k) | n);
}

int main()
{
    int n = 10, k = 2;
    cout << "Kth bit set number = "
         << setKthBit(n, k);
    return 0;
}
